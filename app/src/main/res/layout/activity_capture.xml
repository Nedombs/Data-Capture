<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CaptureActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout2" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout3" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp">
        <TextView
                android:text="Job Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtJobNumber"
        />
        <TextView
                android:text="Street Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/edtStreetAddress"
                android:hint="house number, street number"/>
        <TextView
                android:text="Suburb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtSuburb"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtSuburb"
        />
        <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtCity2"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtCity"
        />
        <TextView
                android:text="Postal Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtPostalCode"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtPostalCode"
        />
        <TextView
                android:text="Old Meter Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtOldMeterNumber"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtOldMeterNumber"
        />
        <TextView
                android:text="New Meter Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtNewMeterNumber"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtNewMeterNumber"
        />
    </LinearLayout>
        <Button
                android:text="Capture new job"
                android:layout_width="417dp"
                android:layout_height="66dp" android:id="@+id/btnBack"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>